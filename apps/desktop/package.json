{
    "name": "chibi-office-desktop",
    "version": "0.1.0",
    "description": "Chibi Office AI â€” Desktop App",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "NODE_ENV=development electron .",
        "package": "electron-builder --mac --win --linux",
        "package:mac": "electron-builder --mac"
    },
    "dependencies": {
        "electron-store": "^10.0.0"
    },
    "devDependencies": {
        "electron": "^33.4.11",
        "electron-builder": "^25.1.8"
    },
    "build": {
        "appId": "com.chibi-office.ai",
        "productName": "Chibi Office AI",
        "mac": {
            "target": "dmg",
            "icon": "assets/icon.png"
        },
        "win": {
            "target": "nsis"
        },
        "linux": {
            "target": "AppImage"
        },
        "files": [
            "main.js",
            "preload.js",
            "ipc/**/*",
            "assets/**/*"
        ],
        "extraResources": [
            {
                "from": "../backend",
                "to": "backend",
                "filter": [
                    "**/*",
                    "!__pycache__/**",
                    "!*.pyc",
                    "!chibi.db"
                ]
            }
        ]
    }
}
